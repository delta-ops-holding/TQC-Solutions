@page "/"
@namespace RestAPI.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="da">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        The Queens' Court API
    </title>
    <base href="~/" />

    <link href="css/site.css" rel="stylesheet" />

    <environment include="Development">
        <link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    </environment>

    <link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/js/site.js"></script>
</head>
<body>

    <app>
        @(await Html.RenderComponentAsync<App>(RenderMode.Server))
    </app>

    <script src="_framework/blazor.server.js"></script>

    <environment include="Development">
        <script src="~/jquery/jquery.js"></script>
        <script src="~/twitter-bootstrap/js/bootstrap.bundle.js" type="text/javascript"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/jquery/jquery.min.js"></script>
        <script src="~/twitter-bootstrap/js/bootstrap.bundle.min.js" type="text/javascript"></script>
    </environment>
</body>
</html>
